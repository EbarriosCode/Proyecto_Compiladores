<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.code.ebarrios.kakchilingo.LevelTwo.LessonFourLevelTwoActivity">

    <include layout="@layout/actionbar_toolbar"></include>

    <TextView
        android:id="@+id/tituloOracion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traduce esta oración"
        android:textColor="@android:color/black"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/oracionTraducir4.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yin man in aj-Mexico"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>


    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="25dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtLeccion4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textLongMessage"
            android:hint="Escriba aquí su respuesta"
            />
    </android.support.design.widget.TextInputLayout>




    <Button
        android:id="@+id/btnCalificarLeccion4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificar"
        android:layout_marginTop="50dp"
        style="@style/RaisedButtonDark"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />

</LinearLayout>
