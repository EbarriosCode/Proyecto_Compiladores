<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.code.ebarrios.kakchilingo.FinalLevelOneActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tituloFinalLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!Lección completada¡"
            android:textColor="@android:color/black"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/puntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+10 EXP"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bono! +5 EXP"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loadingcargado"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        />

    <Button
        android:id="@+id/btnFinalLevelOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:text="CONTINUAR"
        style="@style/RaisedButtonDark"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
