<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.code.ebarrios.kakchilingo.Leccion1Activity">

    <include layout="@layout/actionbar_toolbar"></include>

    <TextView
        android:id="@+id/TituloLeccion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál de éstas es Mujer?"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="#000"
        />

    <GridView
        android:id="@+id/GridLeccion1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="90dp"
        android:numColumns="2"
        android:verticalSpacing="100dp"
        android:horizontalSpacing="10dp"
        android:padding="30dp"
        android:layout_marginTop="90dp"
        >

    </GridView>
</RelativeLayout>
