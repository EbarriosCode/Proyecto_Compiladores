<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.code.ebarrios.kakchilingo.LevelTwo.LessonThreeLevelTwoActivity">

    <include layout="@layout/actionbar_toolbar"></include>

    <TextView
        android:id="@+id/tituloOracion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traduce esta oración"
        android:textColor="@android:color/black"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/oracionTraducir4.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jun ak’wal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/oracionTraducir4.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aj-"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/oracionTraducir4.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Armita"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>
    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="25dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtLeccion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="OPCIONES"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="120dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/nino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="niño"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/un"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="un"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/guatemala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="guatemala"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="de"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/mexico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mexico"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnCalificarLeccion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificar"
        android:layout_marginTop="50dp"
        style="@style/RaisedButtonDark"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />

</LinearLayout>
