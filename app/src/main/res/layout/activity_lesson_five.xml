<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.code.ebarrios.kakchilingo.LessonFiveActivity">

    <include layout="@layout/actionbar_toolbar"></include>

    <TextView
        android:id="@+id/tituloOracion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traduce esta oración"
        android:textColor="@android:color/black"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/oracionTraducir5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yin in jun achi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="25dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtLeccion5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yo soy un "
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="OPCIONES"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="120dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/mujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mujer"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/nino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="niño"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/hombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hombre"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/madre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="madre"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/senora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="señora"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnCalificarLeccion5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificar"
        android:layout_marginTop="50dp"
        style="@style/RaisedButtonDark"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />

</LinearLayout>
